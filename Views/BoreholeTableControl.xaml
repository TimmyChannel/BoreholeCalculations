<UserControl x:Class="BoreholeCalculations.Views.BoreholeTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:BoreholeCalculations.ViewModels"
             xmlns:local="clr-namespace:BoreholeCalculations.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding BoreholeTableControlViewModel, Mode=OneWay, Source={StaticResource Locator}}">
    <Grid>
        <DataGrid ItemsSource="{Binding Boreholes}" AutoGenerateColumns="False"
                  CurrentItem="{Binding CurrentItem, Mode=OneWayToSource}"
                  AlternatingRowBackground="#FF2B2B2B"
                  RowBackground="#FF3B3F41"
                  Foreground="#FFB9B9B9"
                  Background="#FF3B3F41"
                  HorizontalGridLinesBrush="#FF4E4E4E"
                  VerticalGridLinesBrush="#FF464646"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер" Binding="{Binding Path=ID}"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Path=Name}"/>
                <DataGridTextColumn Header="Глубина (м)" Binding="{Binding Path=Depth}"/>
                <DataGridTextColumn Header="Координаты" Binding="{Binding Path=Coordinates}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
